library("ggplot2")
theme_set(theme_bw())
data = read.table("activity-category.data", header = T)
head(data)
plot(data)
pie <- ggplot(data, aes(fill = factor(Category))) + geom_bar(width = 1) + coord_polar(theta = "y")
pie
pie <- ggplot(data, aes(x = factor(Activity), fill = factor(Category))) + geom_bar(width = 1) + coord_polar(theta = "y")
pie
